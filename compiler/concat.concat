  v .valType .typeType switch{
  PRIMITIVE_TYPE case
    v .valType Type.TYPE == if{
      v .data Type cast << return
    else
      v .data stringValue <<* return
    }
    end-case
  ENUM_TYPE case
   '[' << v .data EnumEntry cast .index stringValue <<* ']' << return
