  TUPLE_TYPE case
    "tuple-type unimplemented\n" eputs 1 exit
  end-case
  WRAPPER_TYPE case
    v .valType Type.STRING == ||{ v .valType Type.USTRING == } if{
      v .data stringValue <<* return
    else
